<article{{ attributes.addClass('row').addClass('event-teaser') }}>
    <div class="media">
        <div class="media-left">
            {{ content.field_featured_image }}
        </div>
        <div class="media-body">
            {{ title_prefix }}
            {% if not page %}
                <h2{{ title_attributes.addClass('media-heading') }}>
                    <a href="{{ url }}" rel="bookmark">{{ label }}</a>
                </h2>
            {% endif %}
            {{ title_suffix }}
            {% if content.field_date_range %}
            <small class="meta">
                {{ content.field_date_range }}
            </small>
            {% endif %}
            {% if content.field_location %}
            <small class="meta">
                {{ content.field_location }}
            </small>
            {% endif %}
            {{ content.field_categories }}
            {{ content.body }}
        </div>
    </div>
</article>
