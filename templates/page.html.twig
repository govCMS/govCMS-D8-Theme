<div class="layout-container">
    <div class="uikit-global-nav">
        {{ page.nav_secondary }}
    </div>
    <header id="header" role="banner" class="navbar">
        <div class="container">
            <nav class="navbar">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <h2 class="brand brand-name has-img">
                        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-logo site-logo-branding">
                            {{ page.header }}
                        </a>
                    </h2>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navigation" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </nav>
        </div>
    </header>

    <div class="container-full main-nav">
        <div class="container">
            <div class="collapse navbar-collapse" id="main-navigation">
                {{ page.nav }}
            </div><!-- /.navbar-collapse -->
        </div>
    </div>
    {% if page.highlighted %}
        {{ page.highlighted }}
    {% endif %}
    <main class="container">
        <a id="main-content" tabindex="-1"></a>
        <div id="main" class="main-container row">
            <div id="content">
                <div class="title-block">
                    {{ page.breadcrumb }}
                    {{ page.help }}
                </div>
                {% if page.sidebar_first is defined and page.sidebar_first|render|striptags|trim %}
                    <aside class="col-sm-3" role="complementary">
                        {{ page.sidebar_first }}
                    </aside>
                {% endif %}
                {%
                    set content_classes = [
                    (page.sidebar_first is defined and page.sidebar_first|render|striptags|trim) and (page.sidebar_second is defined and page.sidebar_second|render|striptags|trim) ? 'col-sm-6',
                    (page.sidebar_first is defined and page.sidebar_first|render|striptags|trim) and page.sidebar_second is empty ? 'col-sm-9',
                    (page.sidebar_second is defined and page.sidebar_second|render|striptags|trim) and page.sidebar_first is empty ? 'col-sm-9',
                    page.sidebar_first is empty and page.sidebar_second is empty ? 'col-sm-12'
                ]
                %}
                <section id="main-content-section" {{ content_attributes.addClass(content_classes) }} role="main">
                    <div id="page-content">
                        {{ page.content }}
                    </div>
                </section>

                {% if page.sidebar_second is defined and page.sidebar_second|render|striptags|trim %}
                    <aside class="col-sm-3 right-bar" role="complementary">
                        {{ page.sidebar_second }}
                    </aside>
                {% endif %}
            </div>
        </div>
    </main>
    {% if page.sub_footer %}
        <div class="container-full">
            <div class="highlight-footer">
                <div class="container">
                    {{ page.sub_footer }}
                </div>
            </div>
        </div>
    {% endif %}
    {% if page.footer %}
        <footer>
            <h1 class="sr-only">Footer links</h1>
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{ coa_bottom }}" alt="Australian Government" width="163">
                    </div>
                    <div class="col-md-9">
                        {{ page.footer }}
                        <small>
                            &copy; Commonwealth of Australia <br>
                            <a href="https://creativecommons.org/licenses/by/3.0/au/">Licensed under Creative Commons.</a>
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    {% endif %}

</div>{# /.layout-container #}
